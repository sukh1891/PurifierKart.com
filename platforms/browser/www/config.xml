<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ktech.purikart" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Kitchen Kart</name>
    <description>
        Kitchen Kart is a unit of Purifier Kart. Here you can buy water purifiers, geysers, home appliances, kitchen appliances and much more at the best possible prices. Download the app and avail special offers.
    </description>
    <author email="ceo@khuranatech.in" href="http://khuranatech.in">
        Khurana Technologies
    </author>
    <content src="index.html" />
    <icon src="www/img/icon.png" />
    <gap:splash src="www/img/app-splash.png" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <preference name="permissions" value="none" />
    <preference name="orientation" value="portrait" />
    <preference name="fullscreen" value="false" />
    <preference name="target-device" value="universal" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="show-splash-screen-spinner" value="false" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="android-installLocation" value="auto" />
</widget>
